<?xml version="1.0"?>

<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="Boxalino_Intelligence::css/bxAutocomplete.css"/>
        <css src="Boxalino_Intelligence::css/bxOverlay.css"/>
        <css src="Boxalino_Intelligence::css/bxBanner.css"/>
        <css src="Boxalino_Intelligence::css/bxSearchMessage.css"/>
    </head>
    <body>
        <referenceContainer name="head.additional">
            <block class="Boxalino\Intelligence\Block\Script" name="bxScript" template="Boxalino_Intelligence::script.phtml"/>
        </referenceContainer>

        <referenceContainer name="before.body.end">
            <block class="Boxalino\Intelligence\Block\Notification" name="bxNotification" template="Boxalino_Intelligence::notification.phtml"/>
        </referenceContainer>

        <referenceContainer name="footer">
            <block class="Boxalino\Intelligence\Block\Overlay\Main" name="bxOverlay" template="Boxalino_Intelligence::overlay.phtml"/>
            <block class="Boxalino\Intelligence\Block\SearchEmpty" name="bxEmptySearch" template="Boxalino_Intelligence::searchEmpty.phtml"/>
        </referenceContainer>
    </body>
</page>